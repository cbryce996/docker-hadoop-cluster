<configuration>

    <!-- Enable ACLs for YARN -->
    <property>
        <name>yarn.acl.enable</name>
        <value>1</value>
    </property>
    
    
    <!-- Host names -->
    <property>
        <name>yarn.nodemanager.hostname</name>
        <value>nodemanager</value>
    </property>

    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>resourcemanager</value>
    </property>


    <!-- RPC addresses -->
    <property>
        <name>yarn.nodemanager.address</name>
        <value>nodemanager:8045</value>
    </property>

    <property>
        <name>yarn.resourcemanager.address</name>
        <value>resourcemanager:8082</value>
    </property>


    <!-- HTTPS addresses -->
    <property>
        <name>yarn.resourcemanager.webapp.https.address</name>
        <value>resourcemanager:5002</value>
    </property>

    <property>
        <name>yarn.nodemanager.webapp.https.address</name>
        <value>nodemanager:5003</value>
    </property>


    <!-- HTTP policy -->
    <property>
        <name>yarn.http.policy</name>
        <value>HTTPS_ONLY</value>
    </property>


    <!-- Kerberos authentication -->
    <property>
        <name>yarn.nodemanager.keytab</name>
        <value>/keys/yarn-nodemanager.keytab</value>
    </property>

    <property>
        <name>yarn.nodemanager.principal</name>
        <value>yarn/nodemanager@CLUSTER</value>
    </property>

    <property>
        <name>yarn.resourcemanager.keytab</name>
        <value>/keys/yarn-resourcemanager.keytab</value>
    </property>
    
    <property>
        <name>yarn.resourcemanager.principal</name>
        <value>yarn/resourcemanager@CLUSTER</value>
    </property>
    
</configuration>
