<configuration>
    <property>
        <name>yarn.acl.enable</name>
        <value>0</value>
    </property>
    <property>
        <name>yarn.nodemanager.hostname</name>
        <value>nodemanager</value>
    </property>
    <property>
        <name>yarn.nodemanager.address</name>
        <value>nodemanager:8045</value>
    </property>
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>resourcemanager</value>
    </property>
    <property>
        <name>yarn.resourcemanager.address</name>
        <value>resourcemanager:8082</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
    <property>
        <name>yarn.nodemanager.keytab</name>
        <value>/keys/yarn-nodemanager.keytab</value>
    </property>

    <property>
        <name>yarn.nodemanager.kerberos.principal</name>
        <value>yarn/nodemanager@CLUSTER</value>
    </property>

    <property>
        <name>yarn.resourcemanager.keytab</name>
        <value>/keys/yarn-resourcemanager.keytab</value>
    </property>

    <property>
        <name>yarn.resourcemanager.kerberos.principal</name>
        <value>yarn/resourcemanager@CLUSTER</value>
    </property>

</configuration>
